<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.treasurehunt2"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"></uses-permission>
    <uses-permission android:name="android.permission.ACCESS_MOCK_LOCATION"></uses-permission>
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <activity
            android:name="treasureHunt.TreasureHunt"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="treasureHunt.ActivityCreation"
            android:label="@string/title_activity_treasure_hunt_creation" >
        </activity>
        <activity
            android:name="treasureHunt.ActivityParticipation"
            android:label="@string/title_activity_treasure_hunt_participation" >
        </activity>
        <activity
            android:name="treasureHunt.ActivityStartingHunt"
            android:label="@string/title_activity_treasure_hunt_starting" >
        </activity>
        <activity
            android:name="treasureHunt.ActivityHuntToParticipate"
            android:label="@string/title_activity_treasure_hunt_to_participate" >
        </activity>
        <activity
            android:name="treasureHunt.ActivityUtilityCreation"
            android:label="@string/title_activity_treasure_hunt_utility_creation" >
        </activity>
        <activity
            android:name="treasureHunt.ActivityManageHunts"
            android:label="@string/title_activity_manage_hunts" >
        </activity>
        <activity
            android:name="treasureHunt.PermissionGps"
            android:label="@string/title_activity_permission_gps" >
        </activity>
        
    </application>

</manifest>
